<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilepicture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/useravatar"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/profilename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroybold"
                    android:text="Name"
                    android:textSize="20sp"/>
                <LinearLayout
                    android:layout_width="135dp"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/profileinst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/gilroybold"
                        android:text="Institute"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/profilecont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/gilroybold"
                        android:text="Country"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Subject"
            android:textSize="24dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/topic"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Topic"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Description"
            android:ems="10"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            />


        <ImageView
            android:id="@+id/postimage"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/up"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/custom_imgbg"/>
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/down"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/custom_imgbg"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/contribution"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/custom_imgbg"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/speechbubble"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/custom_imgbg"
                />

        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>